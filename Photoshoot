USACO 2022 Bronze US Open #1 - Photoshoot

Problem Description:
http://www.usaco.org/index.php?page=viewproblem2&cpid=1227

#include <iostream>
#include <string>

using namespace std;

int main() {
  int N;
  string cows;
  cin >> N >> cows;
  int rotate = 0;

  bool lookforbad = false; //bad are pairs in the wrong order
  bool lookforgood = false; //good are pairs in the right order

  for (int i = 0; i < N; i += 2) {
    if (lookforbad) {
      if (cows[i] == 'H' && cows[i + 1] == 'G') { // found a good pair
        ++rotate; // to rotate the bad group (assuming all before it are bad too)
        lookforgood = true;
        lookforbad = false;
      }
      continue;
    }

    if (lookforgood) {
      if (cows[i] == 'G' && cows[i + 1] == 'H') { // found a bad pair
        ++rotate; // to account for switching the good pairs, so that entire length so far is bad
        lookforgood = false;
        lookforbad = true;
      }
      continue; 
    }
    if (cows[i] == 'H' && cows[i + 1] == 'G')
      lookforgood = true;
    else if (cows[i] == 'G' && cows[i + 1] == 'H')
      lookforbad = true;
  }

  if (lookforbad) {
    ++rotate;
  }
  
  cout << rotate;
  return 0;
}
